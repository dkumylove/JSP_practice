<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>JSP_WORK</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <!-- 컨텍스트 초기화 매개변수 -->
  <context-param>
    <param-name>INIT_PARAM</param-name>
    <param-value>web.xml에 저장한 초기화 변수</param-value>
  </context-param>
  
  <!-- 데이터베이스 접속 정보 -->
  <context-param>
    <param-name>driver</param-name>
    <param-value>oracle.jdbc.driver.OracleDriver</param-value>
  </context-param>
  <context-param>
    <param-name>url</param-name>
    <param-value>jdbc:oracle:thin:@localhost:1521:myoracle</param-value>
  </context-param>
  <context-param>
    <param-name>id</param-name>
    <param-value>test</param-value>
  </context-param>
  <context-param>
    <param-name>pw</param-name>
    <param-value>1234</param-value>
  </context-param>
  
  <!-- jndi -->
  <resource-ref>
    <description>Oracle Datasource example</description>
    <res-ref-name>jdbc/myoracle</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  
  <!-- 에러 페이지 -->
  <error-page>
    <error-code>404</error-code>
    <location>/Exception.jsp</location>
  </error-page>
  
  <!-- 세션 유지시간을 '분' 으로 설정 -->
  <session-config>
    <session-timeout>20</session-timeout>
  </session-config>
  
  <!-- 인코딩 필터 형식  -->
    <!-- 필터를 정의(클래스위치넣고/ 클래스의 이름정의) -->
  <filter>
    <filter-name>SessionInitializer</filter-name>
    <filter-class>org.apache.catalina.filters.SessionInitializerFilter</filter-class>
  		<!-- 한글꺠짐 방지를 위한 필터 설정 -->
  		<init-param>
  			<param-name>encoding</param-name>
  			<param-value>UTF-8</param-value>
  		</init-param>
  </filter>
    <!-- 필터 매핑/필터를 언제실행할지 설정(지정URL요청될떄 실행/ 필터이름으로 호출) -->
  <filter-mapping>
   	<filter-name>SessionInitializer</filter-name>
   	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- 한글꺠짐 방지를 위한 필터 끝 -->
  
</web-app>